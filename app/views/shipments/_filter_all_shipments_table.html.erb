<div class="shipments-table-filter-modal shadow-[0_0_25px_0_rgba(0,0,0,0.15)] inactive rounded-lg ">
    <div class="header">
        <h2 class="text-[24px]">Filters</h2>
        <button class="shipments-filter-modal-close-btn">
            <%= image_tag "cross-persian-green.svg", alt: "cross btn" %>
        </button>
    </div>
    <form>
        <div class="input-fields">

                <div class="dd-form-field filter-modal-field">
                        <label class="ml-0">Job:</label>
                                  <%= select_tag :options, options_for_select([['Any', 'Any'], ['Option 1', 'option1'], ['Option 2', 'option2']]), class: "custom-select w-full px-4 py-2 rounded focus:outline-none focus:border-none " %>
                                </div>

                                <div class="dd-form-field filter-modal-field">
                                                        <label class="ml-0">Order:</label>
                                                                  <%= select_tag :options, options_for_select([['Any', 'Any'], ['Option 1', 'option1'], ['Option 2', 'option2']]), class: "custom-select w-full px-4 py-2 rounded focus:outline-none focus:border-none " %>
                                                                </div>
                <div class="dd-form-field filter-modal-field">
                                        <label class="ml-0">From:</label>
                     <input placeholder="Type Here" type="text" class="custom-select w-full px-4 py-2 rounded focus:outline-none" />
                </div>

                <div class="dd-form-field filter-modal-field">
                                                        <label class="ml-0">Shipment Number:</label>
                                     <input placeholder="Type Here" type="text" class="custom-select w-full px-4 py-2 rounded focus:outline-none" />
                                </div>

                                <div class="dd-form-field relative shipment-data-field filter-modal-field">
                                                                                        <label class="ml-0">Receiving Date:</label>

                                     <input type="date" class="custom-select w-full px-4 py-2 rounded focus:outline-none" />


                                </div>
        </div>

        <div class="form-btns flex-col sm:flex-row">
            <button type="button">Apply</button>
            <button type="button">Reset</button>
        </div>
    </form>
</div>


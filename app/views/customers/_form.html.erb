<%= form_with(model: customer, class: "contents") do |form| %>
  <div class="form">
    <%= render partial: "pages/modal_form_errors", locals: { object: customer, name: "customer" } %>

    <div class="form-field">
      <%= form.label :name, class: "required" %>
      <%= form.text_field :name %>
    </div>

    <div class="form-field">
      <%= form.hidden_field :team_id, value: current_user.current_team.id %>
    </div>

    <%= form.fields_for :customer_address do |address_form| %>
      <div class="my-5">
        <%= address_form.label :address_1, "Address 1" %>
        <%= address_form.text_field :address_1, class: "form-field" %>
      </div>

      <div class="my-5">
        <%= address_form.label :address_2, "Address 2" %>
        <%= address_form.text_field :address_2, class: "form-field" %>
      </div>

      <div class="my-5">
        <%= address_form.label :city %>
        <%= address_form.text_field :city, class: "form-field" %>
      </div>

      <div class="my-5">
        <%= address_form.label :state %>
        <%= address_form.select :state, us_states %>
      </div>

      <div class="my-5">
        <%= address_form.label :zip_code %>
        <%= address_form.text_field :zip_code, class: "form-field" %>
      </div>
    <% end %>

    <div class="my-5">
      <%= form.label :phone_number %>
      <%= form.telephone_field :phone_number, class: "form-field", data: { controller: "phone-number" } %>
    </div>

    <div class="form-field">
      <%= form.label :po_message, "PO message" %>
      <%= form.text_area :po_message %>
    </div>

    <div class="inline">
      <%= form.submit class: "button primary" %>
    </div>
  </div>
<% end %>

<div id="<%= dom_id employee %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= employee.user_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Organization:</strong>
    <%= employee.organization_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show This Employee", employee, class: "button show-button" %>
    <%= link_to "Edit This Employee", edit_employee_path(employee), class: "button edit-button primary" %>
    <hr class="mt-6">
  <% end %>
</div>

<%= form_with(model: vendor, class: "contents") do |form| %>
  <div class="form">
    <%= render partial: "pages/modal_form_errors", locals: { object: vendor, name: "vendor" }%>

    <div class="form-field">
      <%= form.label :name, class: "required" %>
      <%= form.text_field :name, rows: 1 %>
    </div>

    <%= form.fields_for :vendor_address do |address_form| %>
      <div class="my-5">
        <%= address_form.label :address_1, "Address 1" %>
        <%= address_form.text_field :address_1, class: "form-field" %>
      </div>

      <div class="my-5">
        <%= address_form.label :address_2, "Address 2" %>
        <%= address_form.text_field :address_2, class: "form-field" %>
      </div>

      <div class="my-5">
        <%= address_form.label :city %>
        <%= address_form.text_field :city, class: "form-field" %>
      </div>

      <div class="my-5">
        <%= address_form.label :state %>
        <%= address_form.select :state, us_states %>
      </div>

      <div class="my-5">
        <%= address_form.label :zip_code %>
        <%= address_form.text_field :zip_code, class: "form-field" %>
      </div>
    <% end %>
    
    <div class="form-field">
      <%= form.label :phone_number %>
      <%= form.phone_field :phone_number, data: { controller: "phone-number" } %>
    </div>
    <div class="form-field">
      <%= form.label :representative %>
      <%= form.text_field :representative, rows: 1 %>
    </div>
    <div class="form-field">
      <%= form.label :website %>
      <%= form.text_field :website %>
    </div>
    <div class="form-field">
      <%= form.check_box :universal %>
      <%= form.label :universal %>
    </div>

    <div class="form-field">
      <%= form.hidden_field :team_id, value: current_user.current_team.id %>
    </div>

    <div class="inline">
      <%= form.submit class: "button primary" %>
    </div>
  </div>
<% end %>

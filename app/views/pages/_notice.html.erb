<% if notice.present? %>
  <p class="py-2 px-3 bg-green-500 text-green-100 font-medium rounded-lg flex" id="<%= modal ? "modal_" : "" %>notice">
    <i class="fa-solid fa-circle-info text-green-100 mr-4 mt-1"></i>
    <%= notice %>
  </p>
<% elsif alert.present? %>
  <p class="py-2 px-3 bg-green-50 text-green-500 font-medium rounded-lg flex"><%= alert %></p>
<% else %>
  <div id="<%= modal ? "modal_" : "" %>notice"></div>
<% end %>
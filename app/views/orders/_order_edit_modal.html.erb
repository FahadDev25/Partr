<div id="dd-order-edit-modal" class="dd-hidden dd-simple-modal-styles fixed z-10 w-full bg-red-500">
  <div class="dd-modal-content">
    <div class="flex justify-between items-center border-b-[1px] border-[#0000000D] px-4 py-3">
      <h2 class="text-2xl font-bold">Edit Order Details</h2>
      <%= image_tag("icons-cross-sea-green.svg", alt: 'Close', id: "dd-close-modal-edit-order", class: "dd-close cursor-pointer") %>
    </div>
    <div class="pt-3">
      <form>
        <div class="dd-form-field filter-modal-field px-4 pb-2">
          <label class="m-0">Order:</label>
          <%= select_tag :options, options_for_select([['None', 'None'], ['Option 1', 'option1'], ['Option 2', 'option2']]), class: "custom-select w-full px-4 py-1.5 rounded focus:outline-none focus:border-none" %>
        </div>
        <div class="dd-form-field filter-modal-field px-4 pb-2">
             <label class="ml-0">Discount:</label>
            <input type="number" class=" w-full px-4 py-1.5 rounded focus:outline-none" placeholder="Type Here" min="0" />
        </div>
        <div class="dd-form-field filter-modal-field px-4 pb-2">
             <label class="ml-0">Total Cost:</label>
            <input type="number" class=" w-full px-4 py-1.5rounded focus:outline-none" placeholder="Type Here" min="0" />
        </div>
        <div class="dd-shipment-submit w-full mt-5 px-4 py-3 bg-[#F6F8F8] border-t border-dd-gray-white">
          <button class="bg-persian-green mt-0 w-full rounded-md text-base">Save Changes</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
function ddModal() {
    const openModalButton = document.getElementById('dd-open-modal-order');
    const closeModalButton = document.getElementById('dd-close-modal-edit-order');
    const modal = document.getElementById('dd-order-edit-modal');

    openModalButton.addEventListener('click', () => {
        modal.classList.remove('dd-hidden');
        modal.classList.add('dd-show');
    });

    closeModalButton.addEventListener('click', () => {
        modal.classList.remove('dd-show');
        modal.classList.add('dd-hidden');
    });

    window.addEventListener('click', (event) => {
        if (event.target === modal) {
            modal.classList.remove('dd-show');
            modal.classList.add('dd-hidden');
        }
    });
}
ddModal();
</script>
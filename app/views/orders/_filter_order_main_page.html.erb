<div id="dd-order-filter-modal" class="inactive shipments-table-filter-modal shadow-[0_0_25px_0_rgba(0,0,0,0.15)] rounded-lg mb-5">

    <div class="header">
        <h2 class="text-[24px]">Filters</h2>
        <button id="dd-close-modal-order-filter" class="shipments-filter-modal-close-btn">
            <%= image_tag "cross-persian-green.svg", alt: "cross btn" %>
        </button>
    </div>
    <form>
        <div class="input-fields">
            <div class="dd-form-field filter-modal-field">
                <label class="ml-0">PO Number:</label>
                <input placeholder="Type Here" type="text" class="w-full px-4 py-2 rounded-lg focus:outline-none" />
            </div>

            <div class="dd-form-field filter-modal-field">
                <label class="ml-0">Job:</label>
                <%= select_tag :options, options_for_select([['Any', 'any'], ['Option 1', 'option1'], ['Option 2', 'option2']]), class: "custom-select w-full px-4 py-2 rounded focus:outline-none focus:border-none " %>
            </div>

            <div class="dd-form-field filter-modal-field">
                <label class="ml-0">Vendor:</label>
                <%= select_tag :options, options_for_select([['Any', 'any'], ['Option 1', 'option1'], ['Option 2', 'option2']]), class: "custom-select w-full px-4 py-2 rounded focus:outline-none focus:border-none " %>
           </div>

           <div class="dd-form-field relative shipment-data-field filter-modal-field">
                 <label class="ml-0">Order Date:</label>
                <input type="date" class=" w-full px-4 py-2 rounded focus:outline-none" />
           </div>

           <div class="dd-form-field filter-modal-field dd-filter-range-field">
                <label class="ml-0">Part Cost:</label>
                <div class="dd-filter-range-field">
                    <input placeholder="Min" type="text" class="px-4 py-2 rounded focus:outline-none" />
                    <input placeholder="Max" type="text" class="px-4 py-2 rounded focus:outline-none" />
                </div>
           </div>

           <div class="dd-form-field filter-modal-field dd-filter-range-field">
                <label class="ml-0">Tax Rate:</label>
                <div class="dd-filter-range-field">
                    <input placeholder="Min" type="text" class="px-4 py-2 rounded focus:outline-none" />
                    <input placeholder="Max" type="text" class="px-4 py-2 rounded focus:outline-none" />
                </div>
           </div>

           <div class="dd-form-field filter-modal-field dd-filter-range-field">
               <label class="ml-0">Tax Cost:</label>
               <div class="dd-filter-range-field">
                   <input placeholder="Min" type="text" class="px-4 py-2 rounded focus:outline-none" />
                   <input placeholder="Max" type="text" class="px-4 py-2 rounded focus:outline-none" />
               </div>
           </div>

            <div class="dd-form-field filter-modal-field dd-filter-range-field">
                  <label class="ml-0">Freight Cost:</label>
                  <div class="dd-filter-range-field">
                      <input placeholder="Min" type="text" class="px-4 py-2 rounded focus:outline-none" />
                      <input placeholder="Max" type="text" class="px-4 py-2 rounded focus:outline-none" />
                  </div>
            </div>

            <div class="dd-form-field filter-modal-field dd-filter-range-field">
                 <label class="ml-0">Total Cost:</label>
                 <div class="dd-filter-range-field">
                     <input placeholder="Min" type="text" class="px-4 py-2 rounded focus:outline-none" />
                     <input placeholder="Max" type="text" class="px-4 py-2 rounded focus:outline-none" />
                 </div>
            </div>

            <div class="dd-form-field filter-modal-field">
                <label class="ml-0">Created By:</label>
                <%= select_tag :options, options_for_select([['Any', 'any'], ['Option 1', 'option1'], ['Option 2', 'option2']]), class: "custom-select w-full px-4 py-2 rounded focus:outline-none focus:border-none " %>
            </div>
        </div>

        <div class="form-btns">
            <button type="button">Apply</button>
            <button type="button">Reset</button>
        </div>
    </form>

</div>

<script>
function ddOrderFilterModal() {
    const openModalButton = document.getElementById('dd-open-modal-order-filter');
    const closeModalButton = document.getElementById('dd-close-modal-order-filter');
    const modal = document.getElementById('dd-order-filter-modal');

    openModalButton.addEventListener('click', () => {
        modal.classList.remove('inactive');
        modal.classList.add('dd-show');
    });

    closeModalButton.addEventListener('click', () => {
        modal.classList.remove('dd-show');
        modal.classList.add('inactive');
    });

    window.addEventListener('click', (event) => {
        if (event.target === modal) {
            modal.classList.remove('dd-show');
            modal.classList.add('inactive');
        }
    });
}

ddOrderFilterModal();
</script>
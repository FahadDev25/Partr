<%= form_with(model: team_role, class: "contents") do |form| %>
  <% if team_role.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(team_role.errors.count, "error") %> prohibited this team_role from being saved:</h2>

      <ul>
        <% team_role.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :role_name %>
    <%= form.text_field :role_name, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label "Permissions" %>
  </div>

  <div class="my-5">
    <%= form.check_box :create_destroy_job, class: "block mt-2 h-5 w-5" %>
    <%= form.label :create_destroy_job, "Create and destroy Jobs" %>
  </div>

  <div class="my-5">
    <%= form.check_box :all_job, class: "block mt-2 h-5 w-5" %>
    <%= form.label :all_job, "Access all Jobs" %>
  </div>

  <div class="my-5">
    <%= form.check_box :all_order, class: "block mt-2 h-5 w-5" %>
    <%= form.label :all_order, "Access all Orders" %>
  </div>

  <div class="my-5">
    <%= form.check_box :all_shipment, class: "block mt-2 h-5 w-5" %>
    <%= form.label :all_shipment, "Access all Shipments" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>

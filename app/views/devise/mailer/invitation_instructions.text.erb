<%= t("devise.mailer.invitation_instructions.hello", email: @user.email) %>

<%= t("devise.mailer.invitation_instructions.someone_invited_you", url: root_url) %>

<%= accept_user_invitation_url(@user, invitation_token: @token) %>

<% if @user.invitation_due_at %>
  <%= t("devise.mailer.invitation_instructions.accept_until", due_date: l(@user.invitation_due_at, format: :'devise.mailer.invitation_instructions.accept_until_format')) %>
<% end %>

<%= t("devise.mailer.invitation_instructions.ignore") %>

<p><%= t("devise.mailer.invitation_instructions.hello", email: @user.email) %></p>

<% host = Rails.application.routes.default_url_options[:host]%>

<p><%= t("devise.mailer.invitation_instructions.someone_invited_you", url: root_url(host:)) %></p>

<p><%= link_to t("devise.mailer.invitation_instructions.accept"), accept_user_invitation_url(@user, invitation_token: @token, host:) %></p>

<% if @user.invitation_due_at %>
  <p><%= t("devise.mailer.invitation_instructions.accept_until", due_date: l(@user.invitation_due_at, format: :'devise.mailer.invitation_instructions.accept_until_format')) %></p>
<% end %>

<p><%= t("devise.mailer.invitation_instructions.ignore") %></p>

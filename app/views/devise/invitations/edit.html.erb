<div class="flex flex-col">
  <h2><%= t "devise.invitations.edit.header" %></h2>

  <%= form_for(resource, as: resource_name, url: "/users/invitation", html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :invitation_token, readonly: true %>

    <% if f.object.class.require_password_on_accepting %>
      <div class="field">
        <%= f.label :username %><br />
        <%= f.text_field :username, value: resource.username, disabled: true %>
      </div>

      <div class="field">
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name %>
      </div>

      <div class="field">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit t("devise.invitations.edit.submit_button"), class: "button primary" %>
    </div>
  <% end %>
</div>
<%= turbo_stream.replace "notice" do %>
  <%= render partial: "pages/notice", locals: { modal: false } %>
<% end %>

<%= turbo_stream.replace "job_#{@unit.job_id}" do %>
  <%= render partial: "jobs/job", locals: { job: @unit.job, action_name: "show" } %>
<% end %>

<%= turbo_stream.replace "new_unit_row" do %>
  <tr id="new_unit_row"></tr>
  <%= render partial: "units/unit_listing", locals: { unit: @unit } %>
<% end %>